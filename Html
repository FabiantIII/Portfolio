    <!--============================ JavaScript ============================-->
    <!-------------------- Toggle Menu(main) -------------------->
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const mainNav = document.querySelector(".navbar-main");
        const toggleMain = document.querySelector(".menu-toggle-main");

        if (mainNav && toggleMain) {
          toggleMain.addEventListener("click", () => {
            mainNav.classList.toggle("open");
          });
        }
      });
    </script>

    <!--------------------- Menu Toggle(2-5) --------------------->
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        // For each navbar block on pages 2–5
        const wrappers = document.querySelectorAll(".navbar-wrap");

        wrappers.forEach((wrap) => {
          const btnDown = wrap.querySelector(".menu-toggle-down");
          const btnUp = wrap.querySelector(".menu-toggle-up");
          const navContent = wrap.querySelector(".navbar-content");

          if (!btnDown || !btnUp || !navContent) return;

          // Open navbar
          btnDown.addEventListener("click", () => {
            navContent.classList.add("open"); // triggers your .navbar-content.open CSS
            btnDown.style.display = "none"; // hide down arrow
            btnUp.style.display = "block"; // show up arrow
          });

          // Close navbar
          btnUp.addEventListener("click", () => {
            navContent.classList.remove("open");
            btnUp.style.display = "none";
            btnDown.style.display = "block";
          });

          // Optional: close navbar when any nav link is clicked
          const links = navContent.querySelectorAll("a");
          links.forEach((link) => {
            link.addEventListener("click", () => {
              navContent.classList.remove("open");
              btnUp.style.display = "none";
              btnDown.style.display = "block";
            });
          });
        });
      });
    </script>

    <!------------------- Recent Work Slider ------------------->
    <script>
      const track = document.querySelector(".rw-track");
      const cards = document.querySelectorAll(".job-card");

      const prevBtn = document.querySelector(".left-btn");
      const nextBtn = document.querySelector(".right-btn");

      let currentPage = 0;
      const itemsPerPage = 2;
      const totalPages = Math.ceil(cards.length / itemsPerPage);

      function updateSlider() {
        const moveX = currentPage * -100; // each "page" is 100% width
        track.style.transform = `translateX(${moveX}%)`;

        prevBtn.disabled = currentPage === 0;
        nextBtn.disabled = currentPage === totalPages - 1;
      }

      nextBtn.addEventListener("click", () => {
        if (currentPage < totalPages - 1) {
          currentPage++;
          updateSlider();
        }
      });

      prevBtn.addEventListener("click", () => {
        if (currentPage > 0) {
          currentPage--;
          updateSlider();
        }
      });

      updateSlider();
    </script>

    <!--------------------- Page Navigation --------------------->
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const buttons = document.querySelectorAll(".page-arrows .arrow");

        buttons.forEach((btn) => {
          btn.addEventListener("click", () => {
            const targetSelector = btn.getAttribute("data-target");
            if (!targetSelector) return;

            const target = document.querySelector(targetSelector);
            if (!target) return;

            target.scrollIntoView({
              behavior: "smooth",
              block: "nearest",
              inline: "start",
            });
          });
        });
      });
    </script>
